                }

                .modal-tabs {
                    gap: 10px;
                }
                
                .lang-switcher {
                    margin-left: 0;
                    margin-right: 0;
                }
                
                .modal-body {
                    padding: 15px;
                }

                /* Buttons & Inputs */
                button, .primary-btn, .dashed-btn {
                    padding: 10px 20px;
                    font-size: 1rem;
                }

                #start-btn {
                    width: 100%;
                    padding: 12px 0;
                }

                .language-options {
                    flex-direction: column;
                    gap: 10px;
                }

                .lang-option-btn {
                    padding: 15px;
                    flex-direction: row;
                    justify-content: center;
                }

                .prize-config-row {
                    gap: 8px;
                }
                
                .prize-title-input {
                    min-width: 0;
                }
                
                .delete-prize-btn {
                    padding: 8px;
                }
            }
